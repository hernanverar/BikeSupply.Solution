@{
  Layout = "_Layout";
}

@using BikeSupply.Models;

<h1> Bike Riders </h1>

@if (@Model.Count == 0)
{
  <h3>No Bike Riders have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Rider rider in Model)
    {
      <li>@Html.ActionLink($"{rider.RiderName}", "Details", new { id = rider.RiderId })</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add a new Rider", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>